---
const { sections } = Astro.props;
---

<nav class="sticky top-0 bg-white shadow-md p-4">
  <div class="grid grid-col-1 gap-5">
    {
      sections.map((section: any) => (
        <div class="gap-5">
          <a href={`#${section.id}`} class="text-blue-500 hover:underline">
            {section.title}
          </a>
        </div>
      ))
    }
  </ul>
</nav>
