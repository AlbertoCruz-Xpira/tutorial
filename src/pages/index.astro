---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import Banner from "../components/Banner.astro";
import Carousel from "../components/Carousel.astro";
import BannerOcaso from "../components/BannerOcaso.astro";
import InfoBanner from "../components/InfoBanner.astro";
import CarouselPromotions from "../components/CarouselPromotions.astro";
import CarouselPosts from "../components/CarouselPosts.astro";

const bannerData = {
  imageSrc: "/chica-con-movil.jpg",
  title: "Accede a tu área asegurado",
  subtitle: "Realiza consultas y gestiona tus citas en el área asegurado.",
  buttonText: "Acceder",
  buttonLink: "/",
};

const slides = [
  {
    imageSrc: "/fisioterapia.jpg",
    title: "Conoce nuestros servicios",
    content: "Servicios avanzados de Fisioterapia.",
    buttonText: "Más información",
    buttonLink: "/descubrir",
  },
  {
    imageSrc: "/oftalmología.jpg",
    title: "Conéctate con expertos",
    content: "Accede a una comunidad de profesionales dispuestos a ayudarte.",
    buttonText: "Conectar ahora",
    buttonLink: "/conectar",
  },
  {
    imageSrc: "/gimnasio.jpg",
    title: "Tu éxito empieza aquí",
    content: "Aprende, crece y alcanza tus metas con nosotros.",
    buttonText: "Empezar",
    buttonLink: "/empezar",
  },
];

const bannerOcasoData = {
  imageSrc: "/ocaso.webp",
  heading:
    "Legálitas Salud es un servicio para los asegurados de OCASO SEGUROS",
  heading2: "¿Aún no eres Asegurado?",
  buttonText: "INFÓRMATE AQUÍ",
  buttonLink: "/",
};

const infoBannerData = {
  imageSrc: "/familia.jpg",
  title: "Protejemos tu salud, cuidamos de ti",
  content:
    "En Legalitas, entendemos que tu bienestar y el de tu familia es lo más importante. Por eso, te ofrecemos un servicio de salud integral diseñado para brindarte apoyo médico y legal en los momentos en que más lo necesitas.",
  buttons: [
    {
      heading: "Orientación médica profesional",
      buttonText: "más información",
      buttonLink: "/",
    },
    {
      heading: "Consulta de especialistas",
      buttonText: "más información",
      buttonLink: "/",
    },
  ],
};

import promotions from "../data/promotions";
import posts from "../data/posts";
---

<BaseLayout>
  <Hero imageSrc="/HeroSection.jpg" showMedicalSearch={true} />
  <Banner bannerData={bannerData} />
  <Carousel slides={slides} slidesPerView="1" />
  <BannerOcaso bannerOcasoData={bannerOcasoData} />
  <InfoBanner infoBannerData={infoBannerData} />
  <CarouselPromotions
    slides={promotions}
    slidesPerView="3"
    title="Promociones destacadas"
  />
  <CarouselPosts slides={posts} slidesPerView="2" title="Publicaciones" />
</BaseLayout>
