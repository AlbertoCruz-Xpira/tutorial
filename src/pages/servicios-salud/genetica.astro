---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HeroSmall from "/src/components/HeroSmall.astro";
import MoreInformacionForm from "../../components/MoreInformacionForm.astro";
import IconRow from "/src/components/widgets/IconRow.astro";
import IconColumn from "/src/components/widgets/IconColumn.astro";
import ImageRow from "/src/components/widgets/ImageRow.astro";
import Column from "/src/components/widgets/Column.astro";
import IndexAccordion from "../../components/grid/IndexAccordion.astro";

const pageTitle = "Genética";
const imageSrc = "/genetica/banner-genetica1.jpg";

import { content } from "./genetica-content";

const sections = [
  {
    id: "section_1",
    title: "Nutrición personalizada",
  },
  {
    id: "section_2",
    title: "Cardio",
  },
  {
    id: "section_3",
    title: "Edad y salud",
  },
  {
    id: "section_4",
    title: "Bienestar - Prevención",
  },
  {
    id: "section_5",
    title: "Rendimiento deportivo",
  },
  {
    id: "section_6",
    title: "Prevención de cáncer",
  },
  {
    id: "section_7",
    title: "Futuros padres",
  },
  {
    id: "section_8",
    title: "Otros",
  },
];
---

<BaseLayout pageTitle={pageTitle}>
  <HeroSmall name={pageTitle} url={imageSrc} alternativeText={pageTitle} />

  <IndexAccordion sections={sections} />

  <div
    class="items-center max-w-5xl px-10 sm:px-10 md:px-10 lg:mx-auto pt-10 pb-5 service-detail"
  >
    <!-- Nutrición Personalizada -->
    <section id="section_1">
      <IconRow imageSrc={content[0].icon} title={content[0].title} />

      <Column number="4">
        <IconColumn
          imageSrc={content[1].imageSrc}
          title={content[1].title}
          text={content[1].description_1}
        />

        <IconColumn
          imageSrc={content[2].imageSrc}
          title={content[2].title}
          text={content[2].description_1}
        />

        <IconColumn
          imageSrc={content[3].imageSrc}
          title={content[3].title}
          text={content[3].description_1}
        />

        <IconColumn
          imageSrc={content[4].imageSrc}
          title={content[4].title}
          text={content[4].description_1}
        />
      </Column>
    </section>

    <!-- Cardio -->
    <section id="section_2">
      <IconRow imageSrc={content[5].icon} title={content[5].title} />

      <Column number="3">
        <IconColumn
          imageSrc={content[6].imageSrc}
          title={content[6].title}
          text={content[6].description_1}
        />

        <IconColumn
          imageSrc={content[7].imageSrc}
          title={content[7].title}
          text={content[7].description_1}
        />

        <IconColumn
          imageSrc={content[8].imageSrc}
          title={content[8].title}
          text={content[8].description_1}
        />
      </Column>
    </section>

    <!-- Edad y salud -->
    <section id="section_3">
      <IconRow imageSrc={content[9].icon} title={content[9].title} />

      <ImageRow
        imageSrc={content[10].imageSrc}
        html={content[10].description_1}
      />
    </section>

    <!-- Bienestar -->
    <section id="section_4">
      <IconRow imageSrc={content[11].icon} title={content[11].title} />

      <section class="grid grid-col-1 lg:grid-cols-2 gap-10 text-[0.7rem]">
        <IconColumn
          imageSrc={content[12].imageSrc}
          title={content[12].title}
          text={content[12].description_1}
        />

        <IconColumn
          imageSrc={content[13].imageSrc}
          title={content[13].title}
          text={content[13].description_1}
        />
      </section>
    </section>

    <!-- Rendimiento -->
    <section id="section_5">
      <IconRow imageSrc={content[14].icon} title={content[14].title} />

      <Column number="2">
        <IconColumn
          imageSrc={content[15].imageSrc}
          title={content[15].title}
          text={content[15].description_1}
        />

        <IconColumn
          imageSrc={content[16].imageSrc}
          title={content[16].title}
          text={content[16].description_1}
        />
      </Column>
    </section>

    <!-- Prevención -->
    <section id="section_6">
      <IconRow imageSrc={content[17].icon} title={content[17].title} />

      <ImageRow
        imageSrc={content[18].imageSrc}
        html={content[18].description_1}
      />
    </section>

    <!-- FUTUROS PADRES -->
    <section id="section_7">
      <IconRow imageSrc={content[19].icon} title={content[19].title} />

      <ImageRow
        imageSrc={content[20].imageSrc}
        html={content[20].description_1}
        orientation={content[20].orientation}
      />

      <ImageRow
        imageSrc={content[21].imageSrc}
        html={content[21].description_1}
      />
    </section>

    <!-- OTROS -->
    <section id="section_8">
      <IconRow imageSrc={content[22].icon} title={content[22].title} />

      <Column number="4">
        <IconColumn
          imageSrc={content[23].imageSrc}
          title={content[23].title}
          text={content[23].description_1}
        />

        <IconColumn
          imageSrc={content[24].imageSrc}
          title={content[24].title}
          text={content[24].description_1}
        />

        <IconColumn
          imageSrc={content[25].imageSrc}
          title={content[25].title}
          text={content[25].description_1}
        />

        <IconColumn
          imageSrc={content[26].imageSrc}
          title={content[26].title}
          text={content[26].description_1}
        />
      </Column>

      <div class="grid grid-col-1 md:grid-cols-3 gap-5">
        <IconColumn
          imageSrc={content[27].imageSrc}
          title={content[27].title}
          text={content[27].description_1}
        />

        <IconColumn
          imageSrc={content[28].imageSrc}
          title={content[28].title}
          text={content[28].description_1}
        />

        <IconColumn
          imageSrc={content[29].imageSrc}
          title={content[29].title}
          text={content[29].description_1}
        />
      </div>
    </section>
    <MoreInformacionForm />
  </div>
</BaseLayout>

<style>
  h2 {
    color: var(--color-turquoise-500);
    margin-bottom: 20px;
  }
  h3 {
    color: var(--color-turquoise-500);
    margin-bottom: 10px;
    font-size: 1.2rem;
    font-weight: 400;
  }
  h4 {
    color: var(--color-turquoise-500);
    margin-bottom: 10px;
    font-size: 1.2rem;
    font-weight: 400;
  }
  h3.text-orange {
    color: #feb44c;
  }
  p {
    margin-bottom: 10px;
  }
  .title {
    margin-bottom: 2px;
  }
</style>
