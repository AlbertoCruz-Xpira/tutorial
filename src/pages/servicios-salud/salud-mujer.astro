---
import Hero from "../../components/Hero.astro";
import posts from "../../data/posts";
import BaseLayout from "../../layouts/BaseLayout.astro";
import ServiceMenu from "../../components/ServiceMenu.astro";
import CarouselPosts from "../../components/CarouselPosts.astro";

const pageTitle = "Salud mujer";

const services = [
  {
    heading: "Ginecología",
    link: "./salud-mujer/ginecologia",
    icon: "/src/icons/salud-mujer/icon-ginecologia.png",
    imageSrc: "/salud-mujer/ginecología.jpg",
  },
  {
    heading: "Obstetricia",
    link: "./salud-mujer/obstetricia",
    icon: "/src/icons/salud-mujer/icon-obstreticia.png",
    imageSrc: "/salud-mujer/obstetricia.jpg",
  },
  {
    heading: "Reproduccion asistida",
    link: "./salud-mujer/reproduccion-asistida",
    icon: "/src/icons/salud-mujer/icon-repro-asistida.png",
    imageSrc: "/salud-mujer/reproduccion_asistida.jpg",
  },
  {
    heading: "Onco-gine",
    link: "./salud-mujer/onco-gine",
    icon: "/src/icons/salud-mujer/icon-onco-gine.png",
    imageSrc: "/salud-mujer/onco-gine.jpg",
  },
  {
    heading: "Preserva",
    link: "./salud-mujer/preserva",
    icon: "/src/icons/salud-mujer/icon-preserva.png",
    imageSrc: "/salud-mujer/reproduccion_asistida.jpg",
  },
  {
    heading: "Genética",
    link: "./salud-mujer/genetica",
    icon: "/src/icons/salud-mujer/icon-genetica.png",
    imageSrc: "/salud-mujer/genetica.jpg",
  },
];
---

<BaseLayout pageTitle={pageTitle}>
  <Hero
    imageSrc="/salud-mujer/HeroSaludMujer.jpg"
    showMedicalSearch={true}
  />
  <ServiceMenu services={services} cols="3" />
  <CarouselPosts slides={posts} slidesPerView="2" title="Publicaciones" />
</BaseLayout>
