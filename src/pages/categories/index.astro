---
import BaseLayout from "../../layouts/BaseLayout.astro";
import SimpleButton from "../../components/buttons/SimpleButton.astro";

// Obtiene todos los posts
const allPosts: any = await Astro.glob("../posts/*.md");
// Extrae todas las categorias únicas
const categories = [
  ...new Set(allPosts.map((post: any) => post.frontmatter.categories).flat()),
];
const pageTitle = "Todas las categorias";
---

<BaseLayout>
  <div
    class="items-center max-w-5xl px-10 sm:px-10 md:px-10 lg:mx-auto pt-10 pb-5 grid grid-col-1 gap-5"
  >
    <h2 class="color-turquoise">Todas las categorías</h2>

    <div class="categories flex gap-3">
      {
        categories.map((categoy) => (
          <p class="category">
            <SimpleButton
        buttonLink={`/categories/${categoy}`}
        buttonText={categoy}
      />
          </p>
        ))
      }
    </div>
  </div>
</BaseLayout>
