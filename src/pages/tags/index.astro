---
import BaseLayout from "../../layouts/BaseLayout.astro";
import SimpleButton from "../../components/buttons/SimpleButton.astro";
import allPosts from "../../data/posts";
import type { Post } from "../../interface/Post";

// Extrae todas las categorias Ãºnicas
const tags = [
  ...new Set(allPosts.map((post: Post) => post.tag).flat()),
];
const pageTitle = "Todas las etiquetas";
---

<BaseLayout pageTitle={pageTitle}>
  <div
    class="items-center max-w-5xl px-10 sm:px-10 md:px-10 lg:mx-auto pt-10 pb-5 grid grid-col-1 gap-5"
  >
    <h2 class="color-turquoise">{pageTitle}</h2>

    <div class="tags flex gap-3">
      {
        tags.map((tag) => (
          <p class="tag">
            <SimpleButton
              buttonLink={`/tags/${tag}`}
              buttonText={tag}
            />
          </p>
        ))
      }
    </div>
  </div>
</BaseLayout>
