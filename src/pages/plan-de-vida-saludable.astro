---
import BaseLayout from "../layouts/BaseLayout.astro";
import IconRow from "../components/widgets/IconRow.astro";
import ImageRow from "../components/widgets/ImageRow.astro";
import Calculator from "../components/Calculator.astro";

const pageTitle = "Plan de vida saludable";
const url = "/plan-de-vida-saludable/banner.png";

import { content } from "./plan-de-vida-saludable-content.ts";
import SimpleButton from "../components/buttons/SimpleButton.astro";
import HtmlBlock from "../components/simple/HtmlBlock.astro";
---

<BaseLayout>
  <!-- HERO VIDA SALUDABLE -->
  <div class="relative">
    <img class="w-full" src={url} alt={pageTitle} />

    <!-- Contenedor del texto centrado encima de la imagen -->
    <div
      class="absolute inset-0 flex items-center justify-center text-white text-center p-4"
    >
      <div class="grid grid-col-1 gap-2">
        <h2 class="font-bold color-turquoise">Haz tu vida más saludable</h2>
        <div class="text-[1.2rem] text-[#3e3f40]">
          Utiliza la calculadora, sigue los menús recomendados y disfruta tus
          platos saludables.
        </div>
      </div>
    </div>
  </div>

  <div
    class="items-center max-w-5xl px-10 sm:px-10 md:px-10 lg:mx-auto pt-10 pb-5 service-detail"
  >
    <!-- Sección de Consejos Prácticos -->
    <div class="container" x-data="{ showCalculator: false }">
      <form>
        <input />
        <div class="grid grid-cols-2 gap-5">
          <!-- Plan de Vida Saludable -->
          <div class="grid grid-col-1 items-center justify-content-center">
            <IconRow
              imageSrc="/plan-de-vida-saludable/icon-calculadora.png"
              title="Plan de Vida Saludable"
            />

            <div
              style="background-image:url(/plan-de-vida-saludable/bg-planhabitos.jpg);"
              class="h-full bg-cover bg-no-repeat grid items-center justify-center p-5 left-box"
            >
              <h3>Accede a tu plan personalizado para clientes de Ocaso</h3>
              <p>
                Controla tu peso, recibe consejos para mejorar tus hábitos,
                entra a tu plan de vida saludable.
              </p>
              <SimpleButton buttonText="Plan de Hábitos de Vida Saludable" buttonLink="/plan-de-vida-saludable/plan-de-habitos-de-vida-saludable" />
            </div>
          </div>

          <!-- Calculadora -->
          <div class="grid grid-col-1 items-center justify-content-center">
            <IconRow
              imageSrc="/plan-de-vida-saludable/icon-calculadora.png"
              title="Calculadora"
            />

            <div id="quote-calculadora-right" class="p-5 bg-white">
              <div class="text_calculadora">
                <h5 class="color-turquoise pb-5">
                  Introduce tus datos y obtendrás unas pautas útiles para llevar
                  una dieta equilibrada y saludable:
                </h5>
              </div>
              <div class="form-group sexoCheck grid grid-col-1 gap-2">
                <!--<h5>Datos</h5><br />-->
                <div class="label_sexo hidden">
                  <label for="Sexo">Sexo:</label>
                </div>
                <div class="checkbox-inline sexo flex gap-3">
                  <div class="hombre">
                    <div class="box-label flex items-center gap-2">
                      Hombre <input
                        id="Sexo"
                        name="Sexo"
                        required="required"
                        type="radio"
                        value="Hombre"
                      />
                    </div>
                  </div>
                  <div class="mujer">
                    <div class="box-label flex items-center gap-2">
                      Mujer <input
                        id="Sexo"
                        name="Sexo"
                        required="required"
                        type="radio"
                        value="Mujer"
                      />
                    </div>
                  </div>
                </div>
              </div>
              <div class="clear"></div>

              <div class="form-group calc grid grid-col-1 gap-2">
                <div class="flex gap-3 items-center">
                  <div class="min-w-10 box-label"><label for="Altura">Altura:</label></div>
                  <input
                    id="Altura"
                    name="Altura"
                    class="border border-gray-300 rounded-md px-3 py-1 focus:outline-none focus:ring-1 focus:ring-grey-400 focus:border-grey-400 text-sm text-gray-500"
                    pattern="(^[1-9][0-9]{1,2})"
                    required="required"
                    type="text"
                    value=""
                  />
                  <div class="labelAltura2">
                    <div class="box-label">cm</div>
                  </div>
                </div>
                <div class="flex gap-3 items-center">
                  <div class="min-w-10 box-label"><label for="Peso">Peso:</label></div>
                  <input
                    id="Peso"
                    name="Peso"
                    class="border border-gray-300 rounded-md px-3 py-1 focus:outline-none focus:ring-1 focus:ring-grey-400 focus:border-grey-400 text-sm text-gray-500"
                    pattern="(^[1-9][0-9]{1,2})"
                    required="required"
                    type="text"
                    value=""
                  />
                  <div class="labelPeso2">
                    <div class="box-label">kg</div>
                  </div>
                </div>
                <div class="flex gap-3 items-center">
                  <div class="min-w-10 box-label"><label for="Edad">Edad:</label></div>
                  <input
                    id="Edad"
                    name="Edad"
                    class="border border-gray-300 rounded-md px-3 py-1 focus:outline-none focus:ring-1 focus:ring-grey-400 focus:border-grey-400 text-sm text-gray-500"
                    pattern="^(([1][8-9]{1,1})|([2-9][0-9]{1,1})|([1][0-9]{2,2}))$"
                    required="required"
                    type="text"
                    value=""
                  />
                  <div class="labelEdad2">
                    <div class="box-label">años</div>
                  </div>
                </div>
              </div>
              <div class="clear"></div>
              <div class="form-group calcActividad grid grid-col-1 gap-3">
                <label for="FactActivi" class="hidden">Factor Actividad:</label>
                <div class="textEjercicio">
                  <p>Ejercicio:</p>
                </div>
                <div class="px-5 pb-2 grid grid-col-1 gap-2">
                  <div class="form-inline flex row checkEjercicio gap-1">
                    <div class="calcEjercicio flex items-center gap-2">
                      <div class="box-label flex items-center gap-2">En cama o mínima</div>
                      <input
                        id="FactActivi"
                        name="FactActivi"
                        required="required"
                        type="radio"
                        value="1"
                      />
                    </div>
                    <div class="calcEjercicio flex items-center gap-2">
                      <div class="box-label flex items-center gap-2">Ligero</div>
                      <input
                        id="FactActivi"
                        name="FactActivi"
                        required="required"
                        type="radio"
                        value="2"
                      />
                    </div>
                    <div class="calcEjercicio flex items-center gap-2">
                      <div class="box-label flex items-center gap-2">Medio</div>
                      <input
                        id="FactActivi"
                        name="FactActivi"
                        required="required"
                        type="radio"
                        value="3"
                      />
                    </div>
                  </div>
                  <div class="form-inline flex row checkEjercicio gap-1">
                    <div class="calcEjercicio flex items-center gap-2">
                      <div class="box-label flex items-center gap-2">Intenso:</div>
                      <input
                        id="FactActivi"
                        name="FactActivi"
                        required="required"
                        type="radio"
                        value="4"
                      />
                    </div>
                    <div class="calcEjercicio flex items-center gap-2">
                      <div class="box-label flex items-center gap-2">Muy intenso</div>
                      <input
                        id="FactActivi"
                        name="FactActivi"
                        required="required"
                        type="radio"
                        value="5"
                      />
                    </div>
                  </div>
                </div>
              </div>
          
              <div class="button-orange">
                <a @click="showCalculator = !showCalculator"
                  >Ir a dieta recomendada</a>                  
              </div>
            </div>
          </div>
        </div>
      </form>

      <!-- CALCULATOR -->
      <section x-show="showCalculator" x-cloak x-transition>
        <Calculator />
      </section>

      <!-- SERVICE DETAIL -->
      <!-- SECTION 1 -->
      <section>
        <IconRow imageSrc={content[0].icon} title={content[0].title} />
        <ImageRow
          imageSrc={content[0].imageSrc}
          html={content[0].description_1}
        />
        <ImageRow
          imageSrc={content[1].imageSrc}
          orientation={content[1].orientation}
          html={content[1].description_1}
        />
        <ImageRow
          imageSrc={content[2].imageSrc}
          orientation={content[2].orientation}
          html={content[2].description_1}
        />
        <section>
          <HtmlBlock html={content[2].description_2} />
        </section>
        <ImageRow
          imageSrc={content[3].imageSrc}
          html={content[3].description_1}
        />
      </section>
    </div>
  </div>
</BaseLayout>

<style>
  .left-box {
    min-height: 435px;
  }
  .form-group {
    margin: 10px 0px;
  }

  .box-label {
    line-height: 1.2em;
    text-align: justify;
    font-size: 0.7em;
    color: #545454;
  }

  .calcActividad {
    border: 1px solid #ececec;
    margin: 15px 0px;
  }
  .calcActividad .textEjercicio {
    background-color: #f2f3f7;
  }
  .textEjercicio p {
      padding: 10px 10px 2px 10px;
      color: #5f5f5f;
      font-size: 13px;
  }
  .button-orange {
    color: #ffb03b;
    background: #fff;
    border: 1px solid #ffb03b;
    padding: 10px 0px;
    border-radius: 0px;
    margin-top: 1em;
    cursor: pointer;
    text-align: center;
    border-radius:25px;
}
.button-orange:hover {
  color: #fff;
    background: #ffb03b;
}
</style>
