---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSmall from "/src/components/HeroSmall.astro";
import IconRow from "/src/components/widgets/IconRow.astro";
import ImageRow from "/src/components/widgets/ImageRow.astro";
import TextBlock from "/src/components/simple/TextBlock.astro";

const pageTitle = "Plan de vida saludable";
const url = "/plan-de-vida-saludable/banner.png";

import { content } from "./plan-de-vida-saludable-content.ts";
---

<BaseLayout>
  <!-- HERO VIDA SALUDABLE -->
  <div class="relative">
    <img class="w-full" src={url} alt={pageTitle} />

    <!-- Contenedor del texto centrado encima de la imagen -->
    <div
      class="absolute inset-0 flex items-center justify-center text-white text-center p-4"
    >
      <div class="grid grid-col-1 gap-2">
        <h2 class="font-bold color-turquoise">Haz tu vida más saludable</h2>
        <div class="text-[1.2rem] text-[#3e3f40]">
          Utiliza la calculadora, sigue los menús recomendados y disfruta tus
          platos saludables.
        </div>
      </div>
    </div>
  </div>

  <div
    class="items-center max-w-5xl px-10 sm:px-10 md:px-10 lg:mx-auto pt-10 pb-5"
  >
    <!-- Sección de Consejos Prácticos -->
    <div class="container">
      <form>
        <input />
        <div class="grid grid-cols-2 gap-5">
          <!-- Plan de Vida Saludable -->
          <div class="grid grid-col-1 items-center justify-content-center">
            <IconRow
              imageSrc="/plan-de-vida-saludable/icon-calculadora.png"
              title="Plan de Vida Saludable"
            />

            <div
              style="background-image:url(/plan-de-vida-saludable/bg-planhabitos.jpg)"
            >
              <h3>Accede a tu plan personalizado para clientes de Ocaso</h3>
              <p>
                Controla tu peso, recibe consejos para mejorar tus hábitos,
                entra a tu plan de vida saludable.
              </p>
              <a> Plan de Hábitos de Vida Saludable </a>
            </div>
          </div>

          <!-- Calculadora -->
          <div class="grid grid-col-1 items-center justify-content-center">
            <IconRow
              imageSrc="/plan-de-vida-saludable/icon-calculadora.png"
              title="Calculadora"
            />

            <div id="quote-calculadora-right" class="p-5 bg-white">
              <div class="text_calculadora">
                <h5 class="color-turquoise pb-5">
                  Introduce tus datos y obtendrás unas pautas útiles para llevar
                  una dieta equilibrada y saludable:
                </h5>
              </div>
              <div class="form-group sexoCheck">
                <!--<h5>Datos</h5><br />-->
                <div class="label_sexo">
                  <label for="Sexo">Sexo:</label>
                </div>
                <div class="checkbox-inline sexo flex gap-3">
                  <div class="hombre">
                    <p>
                      Hombre <input
                        id="Sexo"
                        name="Sexo"
                        required="required"
                        type="radio"
                        value="Hombre"
                      />
                    </p>
                  </div>
                  <div class="mujer">
                    <p>
                      Mujer <input
                        id="Sexo"
                        name="Sexo"
                        required="required"
                        type="radio"
                        value="Mujer"
                      />
                    </p>
                  </div>
                </div>
              </div>
              <div class="clear"></div>

              <div class="form-group calc grid grid-col-1 gap-2">
                <div class="flex gap-3 items-center">
                  <p><label for="Altura">Altura:</label></p>
                  <input
                    id="Altura"
                    name="Altura"
                    class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-grey-400 focus:border-grey-400"
                    pattern="(^[1-9][0-9]{1,2})"
                    required="required"
                    type="text"
                    value=""
                  />
                  <div class="labelAltura2">
                    <p>cm</p>
                  </div>
                </div>
                <div class="flex gap-3 items-center">
                  <p><label for="Peso">Peso:</label></p>
                  <input
                    id="Peso"
                    name="Peso"
                    class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-grey-400 focus:border-grey-400"
                    pattern="(^[1-9][0-9]{1,2})"
                    required="required"
                    type="text"
                    value=""
                  />
                  <div class="labelPeso2">
                    <p>kg</p>
                  </div>
                </div>
                <div class="flex gap-3 items-center">
                  <p><label for="Edad">Edad:</label></p>
                  <input
                    id="Edad"
                    name="Edad"
                    class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-grey-400 focus:border-grey-400"
                    pattern="^(([1][8-9]{1,1})|([2-9][0-9]{1,1})|([1][0-9]{2,2}))$"
                    required="required"
                    type="text"
                    value=""
                  />
                  <div class="labelEdad2">
                    <p>años</p>
                  </div>
                </div>
              </div>
              <div class="clear"></div>
              <div class="form-group calcActividad">
                <label for="FactActivi">Factor Actividad:</label>
                <div class="textEjercicio">
                  <p>Ejercicio:</p>
                </div>
                <div class="form-inline row checkEjercicio">
                  <div class="calcEjercicio">
                    <p>En cama o mínima</p>
                    <input
                      id="FactActivi"
                      name="FactActivi"
                      required="required"
                      type="radio"
                      value="1"
                    />
                  </div>
                  <div class="calcEjercicio">
                    <p class="textWidth">Ligero</p>
                    <input
                      id="FactActivi"
                      name="FactActivi"
                      required="required"
                      type="radio"
                      value="2"
                    />
                  </div>
                  <div class="calcEjercicio">
                    <p>Medio</p>
                    <input
                      id="FactActivi"
                      name="FactActivi"
                      required="required"
                      type="radio"
                      value="3"
                    />
                  </div>
                  <div class="calcEjercicio">
                    <p class="textWidth">Intenso:</p>
                    <input
                      id="FactActivi"
                      name="FactActivi"
                      required="required"
                      type="radio"
                      value="4"
                    />
                  </div>
                  <div class="calcEjercicio">
                    <p>Muy intenso</p>
                    <input
                      id="FactActivi"
                      name="FactActivi"
                      required="required"
                      type="radio"
                      value="5"
                    />
                  </div>
                </div>
              </div>

              <div class="form-group"></div>

              <div class="boton">
                <button id="btnCalcular" class="btn"
                  >Ir a dieta recomendada</button
                >
              </div>
            </div>
          </div>
        </div>
        <input />
      </form>
    </div>

    <!-- SECTION 1 -->
    <section>
      <IconRow imageSrc={content[0].icon} title={content[0].title} />
      <ImageRow
        imageSrc={content[0].imageSrc}
        html={content[0].description_1}
      />
      <ImageRow
        imageSrc={content[1].imageSrc}
        orientation={content[1].orientation}
        html={content[1].description_1}
      />
      <ImageRow
        imageSrc={content[2].imageSrc}
        orientation={content[2].orientation}
        html={content[2].description_1}
      />
      <TextBlock text={content[2].description_2} />
      <ImageRow
        imageSrc={content[3].imageSrc}
        html={content[3].description_1}
      />
    </section>
  </div>
</BaseLayout>
