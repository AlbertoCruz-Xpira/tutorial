const pageTitle = "Plan de vida saludable";
---

<BaseLayout>
    
    <div class="items-center max-w-5xl px-10 sm:px-10 md:px-10 lg:mx-auto pt-10 pb-5 service-page">
   <div>
    <img/>
    <div>
     <a>
      <h5>
       Haz tu vida más saludable
      </h5>
      <p>
       Utiliza la calculadora, sigue los menús recomendados y disfruta tus platos saludables.
      </p>
     </a>
    </div>
   </div>
   <!-- Sección de Consejos Prácticos -->
   <!--<img src="~/images/background/bg_calculadora.jpg" alt="calculadora vida saludable"/>-->
