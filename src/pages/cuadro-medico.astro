---
import BaseLayout from '../layouts/BaseLayout.astro';
import MedicalSearch from '/src/components/MedicalSearch.astro';
import CenterList from "/src/components/CenterList.astro";
const pageTitle = "Cuadro médico";

import { centers } from './centers';

---

<BaseLayout>
  <div 
    class="img-back-landing w-full flex items-center justify-center min-h-90"
    style="background-image:url('/cuadro-medico.jpg');">
    <MedicalSearch/>
  </div>

  <div class="items-center max-w-5xl px-10 sm:px-10 md:px-10 lg:mx-auto pt-10 pb-5 service-page">
    

    <h3 class="grid grid-col-1 items-center justify-center">Resultado de búsqueda</h3> 
    <CenterList centers={centers} />
  </div>
</BaseLayout>