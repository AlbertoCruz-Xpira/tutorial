---
import BaseLayout from '/src/layouts/BaseLayout.astro';
import PrivateAreaLayout from '/src/layouts/PrivateAreaLayout.astro';
const pageTitle = "Área privada";
---
<PrivateAreaLayout>
    <form class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded-lg">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
            <!-- Primera columna -->
            <div>
            <label for="id" class="block text-sm font-medium text-gray-700">ID</label>
            <input type="text" id="id" name="id" class="mt-1 p-2 w-full border rounded-md" />

            <label for="email" class="block text-sm font-medium text-gray-700 mt-4">Email</label>
            <input type="email" id="email" name="email" class="mt-1 p-2 w-full border rounded-md" />

            <label for="nombre" class="block text-sm font-medium text-gray-700 mt-4">Nombre</label>
            <input type="text" id="nombre" name="nombre" class="mt-1 p-2 w-full border rounded-md" />

            <label for="primer-apellido" class="block text-sm font-medium text-gray-700 mt-4">Primer Apellido</label>
            <input type="text" id="primer-apellido" name="primer-apellido" class="mt-1 p-2 w-full border rounded-md" />

            <label for="segundo-apellido" class="block text-sm font-medium text-gray-700 mt-4">Segundo Apellido</label>
            <input type="text" id="segundo-apellido" name="segundo-apellido" class="mt-1 p-2 w-full border rounded-md" />

            <label for="fecha-nacimiento" class="block text-sm font-medium text-gray-700 mt-4">Fecha de Nacimiento</label>
            <input type="date" id="fecha-nacimiento" name="fecha-nacimiento" class="mt-1 p-2 w-full border rounded-md" />

            <label for="sexo" class="block text-sm font-medium text-gray-700 mt-4">Sexo</label>
            <select id="sexo" name="sexo" class="mt-1 p-2 w-full border rounded-md">
                <option value="masculino">Masculino</option>
                <option value="femenino">Femenino</option>
                <option value="otro">Otro</option>
            </select>
            </div>

            <!-- Segunda columna -->
            <div>
            <label for="telefono" class="block text-sm font-medium text-gray-700">Teléfono</label>
            <input type="tel" id="telefono" name="telefono" class="mt-1 p-2 w-full border rounded-md" />

            <label for="tipo-via" class="block text-sm font-medium text-gray-700 mt-4">Tipo de Vía</label>
            <input type="text" id="tipo-via" name="tipo-via" class="mt-1 p-2 w-full border rounded-md" />

            <label for="nombre-via" class="block text-sm font-medium text-gray-700 mt-4">Nombre de Vía</label>
            <input type="text" id="nombre-via" name="nombre-via" class="mt-1 p-2 w-full border rounded-md" />

            <label for="codigo-postal" class="block text-sm font-medium text-gray-700 mt-4">Código Postal</label>
            <input type="text" id="codigo-postal" name="codigo-postal" class="mt-1 p-2 w-full border rounded-md" />

            <label for="poblacion" class="block text-sm font-medium text-gray-700 mt-4">Población</label>
            <input type="text" id="poblacion" name="poblacion" class="mt-1 p-2 w-full border rounded-md" />

            <label for="provincia" class="block text-sm font-medium text-gray-700 mt-4">Provincia</label>
            <input type="text" id="provincia" name="provincia" class="mt-1 p-2 w-full border rounded-md" />

            <label for="pais" class="block text-sm font-medium text-gray-700 mt-4">País</label>
            <input type="text" id="pais" name="pais" class="mt-1 p-2 w-full border rounded-md" />
            </div>
        </div>

        <div class="mt-6">
            <button type="submit" class="bg-[#009494] font-bold uppercase
                text-white text-[0.9rem]
                tracking-widest px-5 py-3
                transform transition-all duration-300 hover:scale-110 hover:bg-[#007e7e]
                inline-flex items-center cursor-pointer rounded-full">
                Modificar perfil
            </button>
        </div>
    </form>
</PrivateAreaLayout>



<style>
    form input,
    form select {
        border-color: #dfdfdf;
        font-size: 0.8rem;
    }
    form label {
        color: var(--color-turquoise-500);
    }
</style>