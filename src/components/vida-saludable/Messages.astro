---
const registers = [ 
  { 'Fecha': '04-02-2025', 'Mensaje': "Tienes una notificación." },
  { 'Fecha': '10-03-2025', 'Mensaje': "Recuerda revisar tu correo." },
  { 'Fecha': '17-02-2025', 'Mensaje': "No olvides tu cita." }
];
const rowsPerPage = 2;
---
<div class="items-center max-w-5xl px-10 sm:px-10 md:px-10 lg:mx-auto pt-10 pb-5 habitos-page" id="mensajes">
    <div class="row margintop35">
      <div class="col-md-12">
        <div class="contentMensajes">
            <div class="flex items-center gap-2 pb-3">
                <img src="/plan-de-vida-saludable/plan-de-habitos-saludables/icon-mensajes.png" class="bell-icon">
                <h3>Mensajes:</h3>
            </div>

            <!-- PRUEBA -->
            <div x-data="{ registers: $el.dataset.registers }" x-init="console.log(registers)">
                <table class="table-auto border-collapse border border-gray-300 w-full">
                  <thead>
                    <tr>
                      <th class="cursor-pointer border border-gray-300 px-4 py-2 bg-gray-200">Fecha</th>
                      <th class="cursor-pointer border border-gray-300 px-4 py-2 bg-gray-200">Mensaje</th>
                    </tr>
                  </thead>
                  <tbody>
                    <template x-for="(item, index) in registers" :key="index">
                      <tr>
                        <td x-text="item.Fecha" class="border border-gray-300 px-4 py-2"></td>
                        <td x-text="item.Mensaje" class="border border-gray-300 px-4 py-2"></td>
                      </tr>
                    </template>
                  </tbody>
                </table>
              </div>
              
              <!-- Pasar los datos del frontmatter como atributo data-registers -->
              <div data-registers={JSON.stringify(registers)}></div>
              
              <script>
                document.addEventListener('alpine:init', () => {
                  console.log('Alpine.js está funcionando con los datos!');
                });
              </script>
