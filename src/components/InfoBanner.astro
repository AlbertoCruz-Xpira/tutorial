---
import Button from "./buttons/Button.astro";

const { infoBannerData } = Astro.props;
const { imageSrc, title, content, buttons } = infoBannerData;
import logo from "../../public/Logo_Salud_Positivo_RGB.png";
---

<section class="bg-[#009494] py-10" data-component="InfoBanner">
  <!-- fila -->
  <div
    class="grid lg:grid-cols-2 grid-cols-1 gap-5 lg:gap-10 items-center max-w-5xl mx-auto p-10"
  >
    <!-- columna izquierda -->
    <div class="">
      <div class="text-left lg:col-span-1">
        <h4 class="font-bold text-[1.2rem] text-white">{title}</h4>
        <p class="text-[0.85rem] text-white mt-3">{content}</p>
      </div>

      <!-- contenedor gris -->
      <div
        class="grid lg:grid-cols-3 grid-cols-1 bg-[#F2F4F8] items-center rounded-lg justify-items-center p-3 mt-10"
      >
        <div class="logo">
          <a href="/"><img class="w-32" src={logo.src} alt="logo" /></a>
        </div>

        {
          buttons.map((button: any) => (
            <div class="">
              <div class=" text-black lg:p-4 p-2 mt-4 rounded-lg">
                <p class="text-sm font-bold">{button.heading}</p>
                <a class="text-sm text-[#0478D4]" href={button.buttonLink}>
                  {button.buttonText}
                </a>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- columna derecha -->
    <div class="flex justify-end">
      <img
        src={imageSrc}
        alt="Banner Image"
        class="w-full rounded-lg lg:max-w-100"
      />
    </div>
  </div>
</section>
