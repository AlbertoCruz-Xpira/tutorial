---
import Button from "./Button.astro";

const { infoBannerData } = Astro.props;
const { imageSrc, title, content, buttons } = infoBannerData;
---

<section class="bg-[#009494] p-6">
    
  <!-- fila -->
  <div class="grid lg:grid-cols-2 grid-cols-1 px-6 lg:px-15 py-6 lg:py-0 gap-6">
    <!-- columna izquierda -->
    <div>
      <div class="text-left lg:col-span-1">
        <h2 class="text-[1rem] font-bold text-white">{title}</h2>
        <p class="text-[0.85rem] text-white mt-1">{content}</p>
      </div>
      
      <div class="flex">
        {buttons.map((button:any) => (
          <div class="text-left lg:col-span-1">
            <div class="bg-white text-black p-4 mt-4 rounded-lg">
              <p class="text-sm">{button.heading}</p>
              <Button buttonText={button.buttonText} buttonLink={button.buttonLink}></Button>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- columna derecha -->
    <div>
      <img src={imageSrc} alt="Banner Image" class="w-full rounded-[50px] max-w-100" >
    </div>
  </div>
</section>
