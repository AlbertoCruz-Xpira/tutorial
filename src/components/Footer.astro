---
import FooterColumn from "./FooterColumn.astro";
import Social from "./Social.astro";
---

<footer class="background-5">
  <div
    class="grid lg:grid-cols-5 grid-cols-1 lg:gap-10 items-top max-w-5xl mx-auto"
  >
    <FooterColumn heading="Redes sociales">
      <div class="flex gap-5">
        <svg
          class="w-10 h-10 text-white dark:text-white"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          fill="none"
          viewBox="0 0 24 24"
        >
          <path
            fill="currentColor"
            fill-rule="evenodd"
            d="M3 8a5 5 0 0 1 5-5h8a5 5 0 0 1 5 5v8a5 5 0 0 1-5 5H8a5 5 0 0 1-5-5V8Zm5-3a3 3 0 0 0-3 3v8a3 3 0 0 0 3 3h8a3 3 0 0 0 3-3V8a3 3 0 0 0-3-3H8Zm7.597 2.214a1 1 0 0 1 1-1h.01a1 1 0 1 1 0 2h-.01a1 1 0 0 1-1-1ZM12 9a3 3 0 1 0 0 6 3 3 0 0 0 0-6Zm-5 3a5 5 0 1 1 10 0 5 5 0 0 1-10 0Z"
            clip-rule="evenodd"></path>
        </svg>
        <svg
          class="w-10 h-10 text-white dark:text-white"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            fill-rule="evenodd"
            d="M21.7 8.037a4.26 4.26 0 0 0-.789-1.964 2.84 2.84 0 0 0-1.984-.839c-2.767-.2-6.926-.2-6.926-.2s-4.157 0-6.928.2a2.836 2.836 0 0 0-1.983.839 4.225 4.225 0 0 0-.79 1.965 30.146 30.146 0 0 0-.2 3.206v1.5a30.12 30.12 0 0 0 .2 3.206c.094.712.364 1.39.784 1.972.604.536 1.38.837 2.187.848 1.583.151 6.731.2 6.731.2s4.161 0 6.928-.2a2.844 2.844 0 0 0 1.985-.84 4.27 4.27 0 0 0 .787-1.965 30.12 30.12 0 0 0 .2-3.206v-1.516a30.672 30.672 0 0 0-.202-3.206Zm-11.692 6.554v-5.62l5.4 2.819-5.4 2.801Z"
            clip-rule="evenodd"></path>
        </svg>
      </div>
    </FooterColumn>
    <FooterColumn heading="Productos">
      <div class="flex">
        <ul>
          <li><a href="">Legálitas Esencial</a></li>
          <li><a href="">Legálitas Plus</a></li>
          <li><a href="">Legálitas Premium</a></li>
          <li><a href="">Legálitas Esencial Premium</a></li>
          <li><a href="">Legálitas Plus Negocio</a></li>
          <li><a href="">Legálitas Premium Negocio</a></li>
        </ul>
      </div>
    </FooterColumn>
    <FooterColumn heading="Conócenos">
      <div class="flex">
        <ul>
          <li><a href="">Sobre Nosotros</a></li>
          <li><a href="">Trabaja con nosotros</a></li>
          <li><a href="">Fundación</a></li>
          <li><a href="">Seguros viaje</a></li>
          <li><a href="">Legálitas lab</a></li>
        </ul>
      </div>
    </FooterColumn>
    <FooterColumn heading="Contacta">
      <div class="flex">
        <ul>
          <li><a href="">Clientes</a></li>
          <li><a href="">Hazte cliente</a></li>
        </ul>
      </div>
    </FooterColumn>
    <FooterColumn heading="Certificaciones">
      <div class="flex">
        <ul>
          <li>Imagen</li>
          <li>Legálitas Seguros, informe situación financiera y solvencia:</li>
          <li>2016 | 2017 | 2018 | 2019 | 2020</li>
        </ul>
      </div>
    </FooterColumn>
  </div>
</footer>
<section class="bg-[#001313]" id="copyright-footer">
  <div
    class="grid lg:grid-cols-2 grid-cols-1 lg:gap-10 items-top max-w-5xl mx-auto
    p-3"
  >
    <div class="legal-links text-[0.7rem] text-white">
      Política de Cookies | Aviso Legal Política de privacidad | Canal ético |
      Información previa | Política de seguridad de la información y continuidad
      del negocio | Mapa-web
    </div>
    <div class="copyright text-[0.7rem] text-white">
      Todos los derechos reservados | Copyright Legálitas Salud © 2025
    </div>
  </div>

  <style>
    footer {
      gap: 1rem;
    }
    .background-5 {
      padding: 65px 25px 110px;
      background: rgb(2, 149, 149);
      background: linear-gradient(
        0deg,
        rgba(2, 149, 149, 1) 0%,
        rgba(0, 100, 100, 1) 100%
      );
    }
    a,
    li {
      color: white;
      font-size: 0.8rem;
      font-weight: 400;
      text-decoration: none;
    }

    li {
      padding-top: 10px;
      padding-bottom: 5px;
    }
  </style>
</section>
