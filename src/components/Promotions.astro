---
import Button from "./Button.astro";

const { promotionsData } = Astro.props;
const { title, promotions } = promotionsData;
---

<section class="grid grid-cols-2 items-center lg:gap-10 bg-[#FFF] rounded-xl max-w-5xl mx-auto"
  data-component="Promotions">

  <div class="lg:col-span-1">
    <h2 class="text-[1rem] font-bold">{title}</h2>
  </div>
  
  <div class="flex gap-6">
    {promotions.map((promotion:any) => (
      <div class="text-left lg:col-span-1" style={`background-image: url(${promotion.imageSrc}); , background-size: cover;`}>
          <Button buttonText={promotion.buttonText} buttonLink={promotion.buttonLink}></Button>
      </div>
      <p class="text-sm">{promotion.heading}</p>
    ))}
  </div>
</section>
