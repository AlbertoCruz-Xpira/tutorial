---
import SquareButton from "./buttons/SquareButton.astro";

const { promotionsData } = Astro.props;
const { title, promotions } = promotionsData;
---

<section class="bg-[#F2F4F8] p-10" data-component="Promotions">
  <div class="items-center max-w-5xl mx-auto mb-10">
    <h2 class="text-[1.2rem] font-bold">{title}</h2>
  </div>

  <!-- fila -->
  <div class="max-w-5xl mx-auto">
    <div class="grid lg:grid-cols-3 grid-cols-1 gap-10 items-center ">
      {
        promotions.map((promotion: any) => (
          <div
            class="min-h-[20rem] flex items-end bg-cover bg-center relative"
            style={`background-image: url(${promotion.imageSrc});`}
          >
            <div class="absolute inset-0 bg-black opacity-30" />

            <!-- fila -->
            <div class="flex flex-col grow">
              <p class="text-[1.2] justify-start text-white font-bold transform px-8 py-5">
                {promotion.heading}
              </p>
              <div class="flex justify-end">
                <SquareButton class="justify-end"
                  buttonText={promotion.buttonText}
                  buttonLink={promotion.buttonLink}
                  >
                  <!-- chevron right icon -->
                  <svg class="w-6 h-6 text-white dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m10 16 4-4-4-4"/>
                  </svg>
                </SquareButton>
                </div>
            </div>

          </div>
        ))
      }
    </div>
  </div>
</section>
