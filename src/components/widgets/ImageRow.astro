---
import HtmlBlock from "/src/components/simple/HtmlBlock.astro";
const { imageSrc, imageDesc, orientation, html } = Astro.props;
---

{
  orientation > 0 ? (
    // IMAGEN DERECHA
    <div class="grid grid-cols-12 gap-4">
      <div class="col-span-12 md:col-span-7">
        <HtmlBlock html={html} />
      </div>
      <div class="col-span-12 md:col-span-5">
        <img src={imageSrc} alt="Image description" />
        <p class="py-2">
          <HtmlBlock html={imageDesc} />
        </p>
      </div>
    </div>
  ) : (
    // IMAGEN IZQUIERDA
    <div class="grid grid-cols-12 gap-4">
      <div class="col-span-12 md:col-span-5">
        <img src={imageSrc} alt="Image description" />
        <p class="py-2">
          <HtmlBlock html={imageDesc} />
        </p>
      </div>
      <div class="col-span-12 md:col-span-7">
        <HtmlBlock html={html} />
      </div>
    </div>
  )
}
