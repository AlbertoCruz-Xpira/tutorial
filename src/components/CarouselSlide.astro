---
import Button from "./buttons/Button.astro";

const { slide } = Astro.props;
const { imageSrc, title, content, buttonText, buttonLink } = slide;
---

<div
  class="relative w-full h-screen
    flex justify-end items-center justify-center
    bg-cover bg-center bg-no-repeat
    p-[3.125rem] md:p-[1.5625rem] p-[0.9375rem]"
  style={`background-image: url(${imageSrc});`}
>
  <!-- Capa oscura para mejorar contraste -->
  <div class="absolute inset-0 bg-black opacity-30"></div>

  <div class="z-10 text-white max-w-lg grid grid-col-1 gap-10 lg:mr-20 mr-10">
    <div
      class="text-right mr-[2.5rem] md:mr-[2.5rem] sm:mr-[0rem] grid grid-col-1 gap-2"
    >
      <h2 class="text-[1.5rem] font-bold">{title}</h2>
      <p class="text-[1rem]">{content}</p>
    </div>
    <Button buttonLink={buttonLink} buttonText={buttonText} />
  </div>
</div>
