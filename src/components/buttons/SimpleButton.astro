---
const { buttonText, buttonLink } = Astro.props;
---

<a
  href={buttonLink}
  aria-label={buttonText}
  class="bg-[#009494] text-white
        text-[0.93rem]
        inline-flex p-2
        transform hover:bg-[#007e7e]
        text-white p-[0.9375rem] cursor-pointer
        rounded-full h-[fit-content]"
>
  {buttonText}
</a>

<style>
  a {
    width: fit-content;
  }
</style>
