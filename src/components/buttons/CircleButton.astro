---
const { buttonText, buttonLink } = Astro.props;
---

<a
  href={buttonLink}
  aria-label={buttonText}
  class="text-white font-bold uppercase
        text-[0.75rem] md:text-[0.93rem] lg:text-[1rem]
        flex items-center justify-center tracking-widest p-2
        transform transition-all duration-300 hover:scale-110 hover:bg-turquoise-600
        inline-flex justify-center items-center
        cursor-pointer
        aspect-square rounded-full w-30"
>
  {buttonText}
</a>

<style>
  a {
    background-color: var(--color-turquoise-500);
  }
</style>
