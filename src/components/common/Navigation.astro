---
const submenuItems = [
  { name: "Dental", link: "/servicios-salud/dental" },
  { name: "Genética", link: "/servicios-salud/genetica" },
  { name: "Oftalmología", link: "/servicios-salud/oftalmologia" },
  { name: "Pediatría", link: "/servicios-salud/pediatria" },
  { name: "Podología", link: "/servicios-salud/podologia" },
  { name: "Salud Hombre", link: "/servicios-salud/salud-hombre" },
  { name: "Salud Mujer", link: "/servicios-salud/salud-mujer" },
  { name: "Salud Senior", link: "/servicios-salud/salud-senior" }
];
---

<div class="nav-links f-12">
  <a href="/">Inicio</a>

  <!-- Menú Servicios con Submenú -->
  <div class="menu-item">
    <a href="#">Servicios</a>
    <ul class="submenu text-black">
      {submenuItems.map((item) => (
        <li><a href={item.link}>{item.name}</a></li>
      ))}
    </ul>
  </div>

  <a href="/garantias-incluidas">Garantías incluidas</a>
  <a href="/blog">Artículos</a>
  <a href="/plan-de-vida-saludable">Plan de vida saludable</a>
  <a href="/otros-servicios">Otros servicios</a>
  <a class="orange" href="/area-privada">Área privada</a>
</div>

<style>
  .nav-links {
    background-color: white;
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }
  .nav-links a {
    display: block;
    text-align: center;
    padding: 2rem 1rem;
    text-decoration: none;
    font-size: 0.8rem;
    font-weight: 400;
    text-transform: uppercase;
    color: black;
  }

  .nav-links a:hover, a:focus {
    background-color: #EFEFEF;
  }
  .menu-item {
    position: relative;
  }

  .submenu {
    display: none;
    position: absolute;
    background: white;
    top: 100%;
    left: 0;
    list-style: none;
    padding: 0px;
    border-radius: 5px;
    min-width: 200px;
    z-index: 100;
  }

  .submenu li {
  }

  .submenu li a {
    color: black;
    text-decoration: none;
    padding: 20px 5px;
  }

  .menu-item:hover .submenu {
    display: block;
  }

  .nav-links .orange {
    background-color: #FFB023;
    border-top-left-radius: 50px;
    color: white;
    border-bottom-left-radius: 50px;
    padding-left: 1.5rem;
  }

  .nav-links .orange:hover {
    background-color: #f19f0b;
  }
</style>