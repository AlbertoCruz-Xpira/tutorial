---
import Navigation from "./Navigation.astro";
import Hamburger from "./Hamburger.astro";
import NavigationMobile from "./NavigationMobile.astro";

import logo from "../../../public/Logo_Salud_Positivo_RGB.png";
import OcasoIcon from "../../icons/OcasoIcon.astro";
---

<div id="sub-header" class="flex justify-between items-center text-white
py-2">
  <section id="left"></section>
  <section class="ocaso flex items-center gap-2">
    <OcasoIcon />
    <span>Servicio para asegurados de Ocaso</span>
  </section>
  <div id="lang-menu" class="grid grid-cols-2 gap-2 pr-5">
    <a href="#">ES</a>
    <a href="#">EN</a>
  </div>
</div>

<header class="container-full-width bg-white text-black flex">
  <div class="logo">
    <a href="/"><img src={logo.src} alt="logo" /></a>
  </div>
  <nav class="flex items-center">
    <Hamburger />
    <Navigation />
  </nav>
</header>

<nav class="navigation-mobile">
  <NavigationMobile />
</nav>

<style>
  header {
    width: 100%;
    align-content: center;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  header nav {
    display: flex;
  }
  .logo {
    display: flex;
    align-items: center;
  }
  .logo img {
    padding: 10px;
    width: 10rem;
  }
  #ocaso-isotipo {
    padding-right: 7px;
    padding-bottom: 2px;
  }
  #sub-header {
    background-color: var(--ocaso-blue);
  }
  .ocaso span {
    font-size: 0.8rem;
  }
  #lang-menu a {
    font-size: 0.8rem;
  }
</style>
