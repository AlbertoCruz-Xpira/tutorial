---
import Navigation from "./Navigation.astro";
import Hamburger from "./Hamburger.astro";

import logo from '../assets/Logo_Salud_Positivo_RGB.png';
---

<header class="container-full-width">
    <div class="logo">
        <a href="/"><img src={logo.src} alt="logo"></a>
    </div>
    <nav>
        <Hamburger />
        <Navigation />
    </nav>
</header>

<style>
    header {
        width: 100%;
        background: white;
        color: black;
        display: flex;
        align-content: center;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    header nav {
        display: flex;
    }
    .logo {
        display: flex;
        align-items: center;
    }
    .logo img {
        padding: 10px;
        width: 10rem;
    }
</style>