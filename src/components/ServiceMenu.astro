---
const { services } = Astro.props;
---

<section class="bg-[#FFF] p-10" data-component="ServiceMenu">

  <!-- fila -->
  <div class="max-w-5xl mx-auto items-center">
    <div class="grid lg:grid-cols-3 md:grid-cols-3 grid-cols-1 gap-10 items-center">
      {
        services.map((service: any) => (
            <a href={service.link}
              class="min-h-[20rem] flex justify-end items-end bg-cover bg-center relative"
              style={`background-image: url(${service.imageSrc});`}
            >
              <!-- Turquoise layer -->
              <div class="absolute inset-0 bg-black opacity-10" />

                <p>{service.heading}</p>
                <p>{service.icon}</p>
            </a>
        ))
      }
    </div>
  </div>
</section>
