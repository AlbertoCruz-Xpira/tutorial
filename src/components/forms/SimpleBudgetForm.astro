---
import Button from "/src/components/buttons/Button.astro";
---

<div class="grid grid-col-1 gap-1">
  <div class="mas-info grid grid-col-1">
    <h3 class="color-turquoise">Llamanos gratis</h3>
    <h4 class="color-turquoise">91 703 90 24</h4>
    <p>¿O prefieres que te llamemos?</p>
  </div>

  <div class="">
    <div>
      <form
        action=""
        enctype="multipart/form-data"
        id="moreInformationForm"
        method="post"
        class="grid grid-col-1 gap-2"
      >
        <!-- NOMBRE Y APELLIDOS -->
        <div class="">
          <div class="form-group form-salud">
            <input
              id="NombreApellidos"
              class="w-full bg-white form-control border border-gray-300 rounded-md px-3 py-4 focus:outline-none focus:ring-1 focus:ring-grey-400 focus:border-grey-400"
              name="NombreApellidos"
              placeholder="Nombre y Apellidos*"
              required="true"
              type="text"
              value=""
            />
          </div>
        </div>
        <!-- TELÉFONO -->
        <div class="form-group form-salud">
          <input
            class="w-full bg-white form-control border border-gray-300 rounded-md px-3 py-4 focus:outline-none focus:ring-1 focus:ring-grey-400 focus:border-grey-400"
            id="Telefono"
            name="Telefono"
            pattern="[0-9]{9}"
            placeholder="Teléfono*"
            required="true"
            type="text"
            value=""
          />
        </div>
        <!-- EMAIL -->
        <div class="form-group form-salud">
          <input
            class="w-full bg-white form-control border border-gray-300 rounded-md px-3 py-4 focus:outline-none focus:ring-1 focus:ring-grey-400 focus:border-grey-400"
            id="Mail"
            name="Mail"
            placeholder="Email*"
            required="true"
            type="text"
            value=""
          />
        </div>
      </form>
      <div class="row">
        <div class="grid grid-col-1 mt-2">
          <div class="form-group form-salud">
            <label class="flex">
              <input
                class="bg-white form-control border border-gray-300 rounded-md mr-1 focus:outline-none focus:ring-1 focus:ring-grey-400 focus:border-grey-400"
                id="AceptoPolitica"
                name="AceptoPolitica"
                required="true"
                type="checkbox"
                value="true"
              />
              <input name="AceptoPolitica" type="hidden" value="false" />
              <p>
                Acepto la <a
                  target="_blank"
                  class="noHover"
                  href="https://atencionmedica.legalitas.com/politica-privacidad/"
                  >política de privacidad</a
                > de la web*
              </p>
            </label>
            <p class="pt-2 note">
              *Campos obligatorios
            </p>
            <div
              class="buttonPassword btn-formulario grid grid-column-1 items-center justify-center mt-7"
            >
              <Button buttonLink="#" buttonText="Solicitar presupuesto" />
            </div>
          </div>
        </div>
      </div>
      <input
        name="ufprt"
        type="hidden"
        value=""
      />
    </div>
  </div>
</div>

<style>
  .note {
    font-size: 10px;
  }
</style>