---
const { bannerOcasoData } = Astro.props;
const { imageSrc, heading, heading2, buttonText, buttonLink } = bannerOcasoData;
---

<section class="bg-[#003362] p-6">
  
  <h2 class="text-lg font-bold">{heading}</h2>
  
  <div class="grid lg:grid-cols-2 grid-cols-1">

    <!--columna izquierda -->
    <div class="text-left">
      <div class="bg-white text-black p-4 mt-4 rounded-lg">
        <p class="text-sm">{heading2}</p>
        <a href={buttonLink} class="block bg-yellow-400 text-center text-black font-bold py-2 px-4 mt-4 rounded-lg">
          {buttonText}
        </a>
      </div>
    </div>

    <!--columna derecha -->
    <div>
      <img src={imageSrc} alt="Ocaso Banner Image"
      class="w-full rounded-[50px] -mt-12 -mb-12 z-100 max-w-100" >
    </div>

  </div>
</section>